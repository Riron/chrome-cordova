{
    "name": "Cordova Mocks",
    "version": "0.0.70",
    "manifest_version": 2,
    "description": "A Chrome extension which provides mock data for many Cordova Plugins and Cordova APIs",
    "author": "Paolo Bernasconi",
    "default_locale": "en",
    "current_locale": "en",
    "background": {
        "scripts": [
            "scripts/background.js"
        ]
    },
    "icons": {
        "128": "images/icon-128-off.png"
    },
    "browser_action": {
        "default_title": "Cordova Mocks",
        "default_icon": {
            "19": "images/icon-128-off.png",
            "38": "images/icon-128-off.png"
        }
    },
    "permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "scripts/inject.js",
                "scripts/cordova.js"
            ],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        "scripts/cordova.js"
    ]
}
